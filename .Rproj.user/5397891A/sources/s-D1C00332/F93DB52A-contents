
get <- function(x = list()) {
  class <- R6::R6Class(classname = "class")

  lapply(names(x), function(name) {

    fn <- eval(substitute(function() subst_name, list(subst_name = name)))

    attr(fn, "srcref") <- NULL
    class$set("public", name, fn)
  })
  class
}
x <- get(x = list(a = 10, b = 20))$new()
